  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Launch Backend",
      "program": "${workspaceFolder}/backend/target/debug/climate_risk_map",
      "args": [],
      "cwd": "${workspaceFolder}/backend/"
    },
    {
      "type": "lldb",
      "request": "attach",
      "name": "Attach Backend",
      "program": "${workspaceFolder}/backend/target/debug/climate_risk_map",
      "args": []
    },
    {
      "type": "pwa-chrome",
      "request": "launch",
      "name": "Launch Chrome against localhost",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/frontend/",
      "runtimeExecutable": "/Users/cypressf/Applications/Google Chrome.app/Contents/MacOS/Google Chrome"
    },
    {
      "name": "Launch Firefox against localhost",
      "type": "firefox",
      "request": "launch",
      "reAttach": true,
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/frontend/"
    }
  ]
}
